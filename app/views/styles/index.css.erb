#content, #sub_section, #header, #footer{
	background-color:<%= @style.theme.background_colour%>;
}

#header{
	<%= header_border(@style) %>
}

body{
	color:<%= @style.theme.text_colour %>;
	background-color:<%= @style.theme.background_colour%>;
}

th{
	color:<%= @style.palette.foreground %>;
	border-bottom: 1px solid <%= @style.theme.border_colour %>;	
}

/* styles for the sidebar */
#sub_section{
	<%= sidebar_border(@style) %>
}

/* STYLES FOR THE IMAGES */
.project_image{
	<%= border_styles(@style) %>
}

.image{
	<%= border_styles(@style) %>
}

h1, h2, h3, h4, h5{
	color:<%= @style.palette.foreground %>;
}

a.carousel img{
	<%= border_styles(@style) %>
}

#carousel, .get_started{
	border-color:<%= @style.theme.border_colour %>;
}

a{
	color:<%= @style.palette.foreground %>;
}

a:visited{
	color:<%= @style.palette.foreground %>;
}

.project_image h2 a{
	color:<%= @style.palette.foreground %>;
}