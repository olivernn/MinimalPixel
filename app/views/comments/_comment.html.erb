<li>
	<h3><%=h comment.name %></h3><p class="datetime"><%= comment.datetime %></p>
	<p><%=h comment.content %></p>
	<% if current_user && current_user.admin? %>
		<p><%= link_to "Delete Comment", article_comment_path(comment.article, comment), :method => :delete, :confirmation => "Are you sure you want to delete this comment" %></p>
	<% end -%>
</li>