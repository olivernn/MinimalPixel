<h1>Listing projects</h1>

<table>
  <tr>
  </tr>

<% for project in @projects %>
  <tr>
	<td><%= project.name %></td>
    <td><%= link_to 'Show', project_path, :subdomain => @user.subdomain %></td>
    <td><%= link_to 'Edit', edit_project_path(project, :subdomain => @user.subdomain) %></td>
    <td><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

