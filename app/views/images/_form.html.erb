<fieldset class="new_style">
	<legend>Image Details</legend>
	<label for="image_name">Name</label>
	<%= f.text_field :name %><br/>
	
	<label for="image_photo">Image</label><br/>
	<% if upload %>
		<%= f.file_field :source %><br/>
	<% else %>
		<%= image_tag image.source.url(:thumb), :class => 'image', :alt => image.name, :title => image.description %><br/>
	<% end -%>
	
	<label for="image_description">Description</label>
	<%= f.text_area :description %><br/>
	
	<% if current_subdomain_user.facebook_user? && upload %>
		<label for="image_facebook_upload">Upload to Facebook</label>
		<%= f.check_box :facebook_upload, :checked => true %>
	<% end -%>
</fieldset>