<%= title(@article.title + " - MinimalPixel") %>

<h1><%=h @article.title %></h1>
<p class="datetime"><%= @article.date %></p>

<%= @article.content %>

<% if current_user && current_user.admin? %>
	<%= link_to "Edit", edit_article_path(@article) %>
	<%= link_to "Destroy", article_path(@article), :method => :delete, :confirmation => "are you sure?" %>
<% end -%>

<p><%= addthis_share_button({:brand => "MinimalPixel"}) %></p>

<h2>Comments</h2>
<ul class="comments">
<% @comments.each do |comment| %>
	<%= render :partial => "comments/comment", :locals => {:comment => comment} %>
<% end -%>
</ul>

<h2>New Comment</h2>

<% form_for([@article, @comment]) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'comments/form', :locals => {:f => f} %>
  <p>
    <%= f.submit "Add" %>
  </p>
<% end %>

<%= link_to "Back", blog_root_path %>