<h1>Editing account</h1>

<% form_for(@account) do |f| %>
  <%= f.error_messages %>
	<%= render :partial => 'form', :locals => {:f => f, :plans => @plans, } %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @account %> |
